{
    "name": "salonbw-monorepo",
    "private": true,
    "version": "0.0.0",
    "packageManager": "pnpm@10.14.0",
    "engines": {
        "node": ">=22"
    },
    "scripts": {
        "prepare": "husky install",
        "setup": "bash scripts/setup.sh",
        "lint": "pnpm -r run --if-present lint",
        "typecheck": "pnpm -r run --if-present typecheck",
        "format": "pnpm -r run --if-present format",
        "tunnel:start": "bash scripts/db-tunnel.sh",
        "tunnel:stop": "bash scripts/db-tunnel-kill.sh",
        "be:dev": "pnpm --filter salonbw-backend start:dev",
        "be:test": "pnpm --filter salonbw-backend test"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "pnpm exec eslint --fix"
        ],
        "*.{json,md,css,scss}": [
            "pnpm exec prettier --write"
        ]
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.16",
        "@nestjs/schematics": "^11.0.9",
        "@types/node": "^24.10.1",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "turbo": "^2.8.1",
        "typescript": "^5.9.3"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "cypress"
        ],
        "overrides": {
            "axios": "^1.12.0",
            "next": "15.2.9",
            "qs": "^6.14.1",
            "validator": "^13.15.20",
            "tar-fs": "^3.0.5",
            "tar": "^7.5.4",
            "glob": "^10.5.0",
            "rand-token": "workspace:rand-token@1.0.1"
        }
    }
}
