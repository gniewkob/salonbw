{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".(e2e|integration)-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["./setup.ts"],
  "collectCoverageFrom": ["../src/**/*.(t|j)s"],
  "coverageDirectory": "../coverage-e2e"
}
