{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@salonbw/api": ["../packages/api/src"],
            "@salonbw/api/*": ["../packages/api/src/*"]
        },
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*",
        ".next/types/**/*.ts",
        "../middleware.ts",
        "middleware.ts"
    ],
    "exclude": [
        "node_modules",
        "jest.config.js",
        "jest.setup.ts",
        "src/__tests__",
        "cypress",
        "cypress.config.ts"
    ]
}
